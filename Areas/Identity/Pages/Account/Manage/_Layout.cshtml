@section Scripts {
     <script>
        Get();
        function Get() {
            $.ajax({
                type: "GET",
                url: "/Home/GetCoins",
                datatype: JSON,
                success: function (result) {
                    if (result) {
                        $('#avatarSettings').attr("src", result.image);
                        $('#nameofuser').text(result.firtsName+ " "+ result.lastName);
                    }
                }
            });
        };
    </script>
    @RenderSection("Scripts", required: false)
}
